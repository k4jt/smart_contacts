<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.kpi.sc"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <instrumentation
        android:targetPackage="ua.kpi.sc.spinner"
        android:name="android.test.InstrumentationTestRunner" />
    <uses-library android:name="android.test.runner" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="ua.kpi.sc.view.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ua.kpi.sc.view.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible"></activity>
        <activity
            android:name="ua.kpi.sc.view.RegistrationActivity"
            android:label="@string/title_activity_registration"></activity>
    </application>

</manifest>
